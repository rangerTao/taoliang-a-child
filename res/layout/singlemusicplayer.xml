<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/llMusicPlayer" android:background="@drawable/musicbg"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<RelativeLayout android:id="@+id/relativeLayout1"
		android:layout_height="fill_parent" android:layout_width="fill_parent">
		<ImageButton android:layout_height="wrap_content" android:src="@drawable/icon" android:background="@drawable/icon"
			android:layout_width="wrap_content" android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true" android:id="@+id/ivMusicThumb" />
		<TextView android:layout_height="wrap_content" android:text="TextView" style="@style/DuoleText"
			android:layout_width="wrap_content" android:layout_below="@+id/ivMusicThumb"
			android:layout_centerHorizontal="true" android:id="@+id/tvMusicTitle"></TextView>
	</RelativeLayout>
	
</LinearLayout>
