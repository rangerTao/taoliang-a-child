<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_bg_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivLessTweak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/brightness_last" />

        <SeekBar
            android:id="@+id/sbTweakBrightnessAndVolume"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:max="10"
            android:progress="5"
            android:thumb="@drawable/seek_thumb" />

        <ImageView
            android:id="@+id/ivFullTweak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sun_small" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivBtnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/btn_close" />

</LinearLayout>