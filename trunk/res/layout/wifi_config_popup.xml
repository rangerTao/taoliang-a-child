<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/password_bg" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="WIFI"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cbWifiConfigEnable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvWifiConfigStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="WIFI"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ivWifiConfig_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_white"
            android:text="@string/wifi_connection"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivWifiConfigClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:src="@drawable/btn_ok" />
    </LinearLayout>

</RelativeLayout>